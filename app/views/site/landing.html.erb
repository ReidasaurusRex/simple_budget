<div class="landingPage">
  <h1>Simple Budget</h1>
  <div class="signInBox">
    <h2>Sign In</h2>
    <div class="signInForm">
    <%= form_tag(sign_in_path) %>
      <div class="formField">
      <p><%= text_field_tag(:email) %><br><span>Email</span></p>
      </div>
      <div class="formField">
        <p><%= password_field_tag(:password) %><br><span>Password</span></p>
      </div>
      <p>
        <%= submit_tag "Sign In", class: "signInSubmit" %>
      </p>
    </div>
  </div>
  <h3>Or</h3>
  <div class="signUpBox">
    <p><%= link_to "Sign Up", new_user_path %></p>
  </div>
</div>