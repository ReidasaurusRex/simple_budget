<div class="expenditureNew">
  <p>Omit from weekly expense<%= check_box_tag(:omit_from_week) %></p>
  <div class="expenditure-new-form">
    <%= form_for [@user, Expenditure.new] do |form| %>
      <div class="form-field">
        <p><%= form.text_field :amount %><br><span>Amount</span></p>
      </div>
      <div class="form-field">
        <p><%= form.text_field :location %><br><span>Location</span></p>
      </div>
      <p><%= form.submit "$" %></p>
    <% end %>
  </div>
</div>